{
  "compilerOptions": {
    "baseUrl": "",  
    "target": "esnext",
    "lib": [
      "es2015", 
      "es2016", 
      "es2017", 
      "es2018", 
      "es2019", 
      "ESNext",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "Actions": ["./src/redux/actions/index.ts"],
      "Vars": ["./src/assets/vars.scss"],
      "Bases": ["./src/components/base/index.ts"],
      "Templates": ["./src/components/templates/index.ts"],
      "Pages": ["./src/components/pages"],
      "Atoms": ["./src/components/UI/atoms/index.ts"],
      "Molecules": ["./src/components/UI/molecules/index.ts"],
      "Organisms": ["./src/components/UI/organisms/index.ts"],
      "Hoc": ["./src/components/HOC/index.ts"],
      "Utils": ["./src/utils/index.ts"],
      "StyleVars": ["./src/assets/GlobalStyles.tsx"]
    },
    "noImplicitAny": false,
    "noResolve": false,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "typeRoots": ["node_modules/@types", "src/@type", "src/types"],
  "include": [
    "src",
    "src/**/*"
  ]
}